<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:background="@drawable/nav_container"
    android:layout_height="620dp">
    <ImageView
    android:id="@+id/backButtonIcon"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/arrow_back"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/createPostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create post"
        android:fontFamily="@font/nunito"
        app:layout_constraintLeft_toRightOf="@+id/backButtonIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:id="@+id/postButton"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="@drawable/post_btn_back"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:fontFamily="@font/nunito"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#CDCDCD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButtonIcon"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:id="@+id/postUserImageLayout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:padding="2dp"
        android:background="@drawable/user_photo_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView"
        >
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/image_container_back"
        android:padding="2dp">
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/postUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/girl" />
    </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/postUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ashley Zamberg"
        android:fontFamily="@font/nunito"
        app:layout_constraintLeft_toRightOf="@+id/postUserImageLayout"
        app:layout_constraintTop_toTopOf="@+id/postUserImageLayout"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/postEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postUserImageLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nunito"
        android:textSize="13sp"
        style="@style/Theme.MaterialComponents.DayNight"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:focusable="true"
        android:hint="Whats on your mind?"/>


</androidx.constraintlayout.widget.ConstraintLayout>